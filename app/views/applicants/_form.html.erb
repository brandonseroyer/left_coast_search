<div class="forms">
  <%= form_for [@job, @applicant] do |f| %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <br>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <br>
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>
    <br>
    <div class="field">
      <%= f.label :about %><br>
      <%= f.text_field :about %>
    </div>
    <br>
    <div class="field">
      <%= f.label :resume %>
      <%= f.file_field :document %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary btn-md' %>
    </div>
  <% end %>
</div>
