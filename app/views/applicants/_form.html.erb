<div id="forms">
  <%= form_for [@job, @applicant] do |f| %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, required: 'required' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, required: 'required' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, required: 'required' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, required: 'required' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :about %><br>
      <%= f.cktext_area :about, required: 'required' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :resume %>
      <%= f.file_field :document, required: 'required' %>
    </div>
    <br>
    <%= recaptcha_tags %>
    <br>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary btn-md' %>
    </div>
  <% end %>
</div>
